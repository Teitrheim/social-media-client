{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "overrides": [
    {
      "files": ["**/*.spec.js"],
      "env": {
        "cypress/globals": true,
        "node": true
      },
      "globals": {
        "cy": "readonly",
        "Cypress": "readonly"
      },
      "plugins": ["cypress", "node"],
      "extends": ["plugin:cypress/recommended"],
      "rules": {
        "cypress/no-unnecessary-waiting": "on",
        "no-unused-vars": "off",
        "cypress/unsafe-to-chain-command": "off"
      }
    },
    {
      "files": ["**/*.test.js", "cypress.config.js"],
      "env": {
        "jest": true,
        "node": true
      },
      "plugins": ["jest"],
      "extends": ["plugin:jest/recommended"],
      "rules": { "jest/prefer-expect-assertions": "off" }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {}
}
